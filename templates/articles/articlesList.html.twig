{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="container flex flex-col mx-auto mt-8">
        <h1 class="text-3xl font-bold justify-center text-white mb-8 underline underline-offset-4 inline">Nos articles<svg xmlns="http://www.w3.org/2000/svg" class="inline ml-1.5 mb-1" width="1.3em" height="1.3em" viewBox="0 0 24 24"><path fill="currentColor" d="M5 21q-.825 0-1.412-.587T3 19V5q0-.825.588-1.412T5 3h14q.825 0 1.413.588T21 5v14q0 .825-.587 1.413T19 21zm2-4h7v-2H7zm0-4h10v-2H7zm0-4h10V7H7z"/></svg></h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-16">
            {% for article in articles %}
                <div class="bg-gray-600 shadow-md overflow-hidden">
                    {% if article.image %}
                        <img src="{{ asset('uploads/images/' ~ article.image) }}" alt="{{ article.title }}" draggable="false" class="w-full h-48 object-cover border-b-amber-500 border-b-2">
                    {% endif %}
                    <div class="p-6">
                        <h2 class="text-2xl text-white font-bold mb-2">{{ article.title }}</h2>
                        <h3 class="text-lg text-white font-semibold mb-2">{{ article.shortTitle }}</h3>
                        <a href="{{ path('article_show', {slug: article.slug}) }}" class="text-blue-500 font-bold hover:underline mt-4 inline-block align-middle group">
                            Lire la suite
                            <svg xmlns="http://www.w3.org/2000/svg" width="1.78em" height="1em" viewBox="0 0 16 9" class="inline align-middle transition transform group-hover:-translate-x-[-0.5rem]">
                                <path fill="currentColor" d="M12.5 5h-9c-.28 0-.5-.22-.5-.5s.22-.5.5-.5h9c.28 0 .5.22.5.5s-.22.5-.5.5"/>
                                <path fill="currentColor" d="M10 8.5a.47.47 0 0 1-.35-.15c-.2-.2-.2-.51 0-.71l3.15-3.15l-3.15-3.15c-.2-.2-.2-.51 0-.71s.51-.2.71 0l3.5 3.5c.2.2.2.51 0 .71l-3.5 3.5c-.1.1-.23.15-.35.15Z"/>
                            </svg>
                        </a>

                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
