{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="container flex flex-col mx-auto mt-8">
        <h1 class="text-3xl font-bold justify-center mx-auto text-white mb-8">Liste des articles</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-52">
            {% for article in articles %}
                <div class="bg-white shadow-md rounded-lg overflow-hidden">
                    {% if article.image %}
                        <img src="{{ asset('uploads/images/' ~ article.image) }}" alt="{{ article.title }}" draggable="false" class="w-full h-48 object-cover">
                    {% endif %}
                    <div class="p-6">
                        <h2 class="text-2xl font-bold mb-2">{{ article.title }}</h2>
                        <h3 class="text-lg font-semibold text-gray-600 mb-2">{{ article.shortTitle }}</h3>
                        <a href="{{ path('article_show', {slug: article.slug}) }}" class="text-blue-500 hover:underline mt-4 block">Lire la suite</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
