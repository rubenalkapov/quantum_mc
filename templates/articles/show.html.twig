{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <div class="container mx-auto mt-8">
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            {% if article.image %}
                <img src="{{ asset('uploads/images/' ~ article.image) }}" alt="{{ article.title }}" draggable="false" class="w-full h-96 object-cover">
            {% endif %}
            <div class="p-6">
                <h1 class="text-3xl font-bold mb-4">{{ article.title }}</h1>
                <h2 class="text-xl font-semibold text-gray-600 mb-4">{{ article.shortTitle }}</h2>
                <p class="text-gray-700 mb-6">{{ article.paragraph }}</p>
                <a href="{{ path('articles') }}" class="text-blue-500 hover:underline">Retour Ã  la liste des articles</a>
            </div>
        </div>
    </div>
{% endblock %}