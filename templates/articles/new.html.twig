{% extends 'base.html.twig' %}

{% block title %}Quantum PVP | Création article{% endblock %}

{% block body %}
    <div class="flex flex-col justify-center items-center mx-auto py-10 w-1/2">
        <h1 class="text-white font-bold text-4xl mb-8">Créer un nouvel article</h1>
        <div class="text-white font-semibold w-full max-w-lg bg-amber-400 p-8 rounded-lg shadow-lg">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            <div class="space-y-4">
                <div>
                    {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'block text-m font-bold text-gray-700'}}) }}
                    {{ form_widget(form.title, {'attr': {'class': 'w-full p-3 mt-1 bg-gray-700 text-white rounded-md'}}) }}
                    {{ form_errors(form.title, {'attr': {'class': 'text-red-500 text-sm'}}) }}
                </div>

                <div>
                    {{ form_label(form.image, 'Image', {'label_attr': {'class': 'block text-m font-bold text-gray-700'}}) }}
                    {{ form_widget(form.image, {'attr': {'class': 'w-full p-3 mt-1 bg-gray-700 text-white rounded-md cursor-pointer'}}) }}
                    {{ form_errors(form.image, {'attr': {'class': 'text-red-500 text-sm'}}) }}
                </div>

                <div>
                    {{ form_label(form.shortTitle, 'Petit Titre', {'label_attr': {'class': 'block text-m font-bold text-gray-700'}}) }}
                    {{ form_widget(form.shortTitle, {'attr': {'class': 'w-full p-3 mt-1 bg-gray-700 text-white rounded-md'}}) }}
                    {{ form_errors(form.shortTitle, {'attr': {'class': 'text-red-500 text-sm'}}) }}
                </div>

                <div>
                    {{ form_label(form.paragraph, 'Paragraphe', {'label_attr': {'class': 'block text-m font-bold text-gray-700'}}) }}
                    {{ form_widget(form.paragraph, {'attr': {'class': 'w-full p-3 mt-1 bg-gray-700 text-white rounded-md'}}) }}
                    {{ form_errors(form.paragraph, {'attr': {'class': 'text-red-500 text-sm'}}) }}
                </div>
            </div>

            <button type="submit" class="btn bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-6">Créer</button>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}