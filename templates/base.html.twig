<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/icon.ico') }}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>


    <nav class="bg-gray-700 roboto">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
            <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
                <img src="{{ asset('images/minecraft_title.png') }}" width="100" height="100" alt="Logo Serveur Quantum" draggable="false">
            </a>
            <button data-collapse-toggle="navbar-default" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-default" aria-expanded="false">
                <span class="sr-only">Ouvrir le menu</span>
                <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
                </svg>
            </button>
            <div class="hidden w-full md:block md:w-auto" id="navbar-default">
                <ul class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-500 rounded-lg bg-gray-700 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0">
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="flex items-center">
                            <a href="/admin" class="block py-2 px-3 text-white rounded hover:text-orange-500">Administration</a>
                        </li>
                    {% endif %}
                    <li class="flex items-center">
                        <a href="/" class="block py-2 px-3 text-white rounded hover:text-orange-500">Accueil</a>
                    </li>
                    <li class="flex items-center">
                        <a href="/articles" class="block py-2 px-3 text-white rounded hover:text-orange-500">News</a>
                    </li>
                    <li class="flex items-center">
                        <a href="/wiki" class="block py-2 px-3 text-white rounded hover:text-orange-500">Wiki</a>
                    </li>
                    <li class="flex items-center">
                        <a href="/reglement" class="block py-2 px-3 text-white rounded hover:text-orange-500">Règlement</a>
                    </li>
                    <li class="flex items-center">
                        <a href="/jouer" class="block py-2 px-3 text-white rounded hover:text-orange-500">Jouer</a>
                    </li>
                    {% if app.user and app.user.avatarHash %}
                        <li class="flex items-center">
                            <a href="/logout" class="px-2 py-1 bg-blue-500 hover:bg-blue-700 inline text-white rounded hover:text-orange-500">
                                Se déconnecter
                                <img class='inline rounded-full w-8 h-8 mr-2' draggable='false' src='https://cdn.discordapp.com/avatars/{{ app.user.discordId }}/{{ app.user.avatarHash }}.jpg' alt='Avatar' />
                            </a>
                        </li>
                    {% else %}
                        <li class="flex items-center">
                            <a href="/auth/discord/start" class="block py-2 px-3 text-white rounded hover:text-orange-500">Se connecter</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

